<?xml version="1.0" encoding="utf-8"?>
<T3DataStructure>
  <meta>
    <langDisable>1</langDisable>
  </meta>
  <sheets>
    <sDEF>
      <ROOT>
        <TCEforms>
          <sheetTitle>Plugin-Einstellungen</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
          <settings.product_list.storagePid>
            <TCEforms>
              <label>Speicherordner für Produkte</label>
              <config>
                <type>group</type>
                <internal_type>db</internal_type>
                <allowed>pages</allowed>
                <size>1</size>
                <maxitems>1</maxitems>
                <minitems>0</minitems>
                <default>0</default>
              </config>
            </TCEforms>
          </settings.product_list.storagePid>
          <header>
            <TCEforms>
              <label>Überschrift</label>
              <config>
                <type>input</type>
                <size>30</size>
                <default>Produkte</default>
              </config>
            </TCEforms>
          </header>
          <description>
            <TCEforms>
              <label>Beschreibung</label>
              <config>
                <type>text</type>
                <cols>30</cols>
                <rows>5</rows>
                <default>Hier finden Sie unsere Produkte aus Shopware 6.</default>
              </config>
            </TCEforms>
          </description>
          <showDescription>
            <TCEforms>
              <label>Beschreibung anzeigen</label>
              <config>
                <type>check</type>
                <default>1</default>
              </config>
            </TCEforms>
          </showDescription>
          <limit>
            <TCEforms>
              <label>Anzahl der Produkte</label>
              <config>
                <type>input</type>
                <size>5</size>
                <eval>int</eval>
                <default>10</default>
              </config>
            </TCEforms>
          </limit>
          <orderBy>
            <TCEforms>
              <label>Sortieren nach</label>
              <config>
                <type>select</type>
                <items>
                  <numIndex index="0">
                    <numIndex index="0">Name</numIndex>
                    <numIndex index="1">name</numIndex>
                  </numIndex>
                  <numIndex index="1">
                    <numIndex index="0">Preis</numIndex>
                    <numIndex index="1">price</numIndex>
                  </numIndex>
                </items>
                <default>name</default>
              </config>
            </TCEforms>
          </orderBy>
          <orderDirection>
            <TCEforms>
              <label>Sortierrichtung</label>
              <config>
                <type>select</type>
                <items>
                  <numIndex index="0">
                    <numIndex index="0">Aufsteigend</numIndex>
                    <numIndex index="1">asc</numIndex>
                  </numIndex>
                  <numIndex index="1">
                    <numIndex index="0">Absteigend</numIndex>
                    <numIndex index="1">desc</numIndex>
                  </numIndex>
                </items>
                <default>asc</default>
              </config>
            </TCEforms>
          </orderDirection>
          <detailButtonText>
            <TCEforms>
              <label>Text für Detail-Button</label>
              <config>
                <type>input</type>
                <size>30</size>
                <default>Details</default>
              </config>
            </TCEforms>
          </detailButtonText>
        </el>
      </ROOT>
    </sDEF>
  </sheets>
</T3DataStructure>
