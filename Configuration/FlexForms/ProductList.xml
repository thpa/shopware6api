<?xml version="1.0" encoding="utf-8"?>
<T3DataStructure>
  <sheets>
    <sDEF>
      <ROOT>
        <sheetTitle>Plugin-Einstellungen</sheetTitle>
        <type>array</type>
        <el>
          <storagePid>
            <label>Speicherordner für Produkte</label>
            <config>
              <type>group</type>
              <internal_type>db</internal_type>
              <allowed>pages</allowed>
              <size>1</size>
              <maxitems>1</maxitems>
              <minitems>0</minitems>
              <default>0</default>
            </config>
          </storagePid>
          <header>
            <label>Überschrift</label>
            <config>
              <type>input</type>
              <size>30</size>
              <default>Produkte</default>
            </config>
          </header>
          <description>
            <label>Beschreibung</label>
            <config>
              <type>text</type>
              <cols>30</cols>
              <rows>5</rows>
              <default>Hier finden Sie unsere Produkte aus Shopware 6.</default>
            </config>
          </description>
          <showDescription>
            <label>Beschreibung anzeigen</label>
            <config>
              <type>check</type>
              <default>1</default>
            </config>
          </showDescription>
          <limit>
            <label>Anzahl der Produkte</label>
            <config>
              <type>input</type>
              <size>5</size>
              <eval>int</eval>
              <default>10</default>
            </config>
          </limit>
          <orderBy>
            <label>Sortieren nach</label>
            <config>
              <type>select</type>
              <renderType>selectSingle</renderType>
              <items>
                <numIndex index="0">
                  <numIndex index="0">Name</numIndex>
                  <numIndex index="1">name</numIndex>
                </numIndex>
                <numIndex index="1">
                  <numIndex index="0">Preis</numIndex>
                  <numIndex index="1">price</numIndex>
                </numIndex>
              </items>
              <default>name</default>
            </config>
          </orderBy>
          <orderDirection>
            <label>Sortierrichtung</label>
            <config>
              <type>select</type>
              <renderType>selectSingle</renderType>
              <items>
                <numIndex index="0">
                  <numIndex index="0">Aufsteigend</numIndex>
                  <numIndex index="1">asc</numIndex>
                </numIndex>
                <numIndex index="1">
                  <numIndex index="0">Absteigend</numIndex>
                  <numIndex index="1">desc</numIndex>
                </numIndex>
              </items>
              <default>asc</default>
            </config>
          </orderDirection>
          <detailButtonText>
            <label>Text für Detail-Button</label>
            <config>
              <type>input</type>
              <size>30</size>
              <default>Details</default>
            </config>
          </detailButtonText>
        </el>
      </ROOT>
    </sDEF>
  </sheets>
</T3DataStructure>
